                   textvariable=minute)
    minuteEntry.place(x=90,y=20)
  
    secondEntry= Entry(root, width=3, font=("Arial",25,""),
                   textvariable=second)
    secondEntry.place(x=180,y=20)
    def submit():
        try:
            temp =int(1)*60 + int(0)
        except:
            print("Please input the right value")
        while temp >-1:
            mins,secs = divmod(temp,60)
            if mins >60:
                mins = divmod(mins, 60)
            minute.set("{0:2d}".format(mins))
            second.set("{0:2d}".format(secs))
  
            root.update()
            time.sleep(1)
            if (temp == 0):
                messagebox.showinfo("Time Countdown", "End of workout")
                root.destroy()
            temp -= 1
    btn = Button(root, text='START', bd='20',command= submit)
    btn.place(x = 130,y = 120)
    root.mainloop()

#2 minute timer
import time
from tkinter import *
from tkinter import messagebox
def timer2():
    root = Tk()
    root.geometry("300x300")
    root.title("Workout Countdown")
    root.configure(bg="black")
    minute=StringVar()
    second=StringVar()
    minute.set("02")
    second.set("00")
  
    minuteEntry= Entry(root, width=3, font=("Arial",25,""),
                   textvariable=minute)
    minuteEntry.place(x=90,y=20)
  
    secondEntry= Entry(root, width=3, font=("Arial",25,""),
                   textvariable=second)
    secondEntry.place(x=180,y=20)
    def submit():
        try:
            temp =int(2)*60 + int(0)
        except:
            print("Please input the right value")
        while temp >-1:
            mins,secs = divmod(temp,60)
            if mins >60:
                mins = divmod(mins, 60)
            minute.set("{0:2d}".format(mins))
            second.set("{0:2d}".format(secs))
  
            root.update()
            time.sleep(1)
            if (temp == 0):
                messagebox.showinfo("Time Countdown", "End of workout")
                root.destroy()
            temp -= 1
    btn = Button(root, text='START', bd='20',command= submit)
    btn.place(x = 130,y = 120)
    root.mainloop()

#cardio workout
import time
def Elliptical_machine():
    print("Elliptical machine:")
    print("""The elliptical machine can provide the cardio benefits of walking or running, with reduced impact on a personâ€™s joints. Elliptical machines are beneficial to those with joint issues, such as
          arthritis.""")
    print("")
    print("Starting workout for 5 minutes...")
    print("Start Workout:")
    for i in range (1,5*60):
        time.sleep(1)
        print(i,"seconds have passed")
    print("End of workout")

def stair_climber():
    print("stair climber")
    print("""The stair climber strengthens the lower body. A person using a stair climber should make sure they maintain good posture throughout the exercise.It can take a while to build stamina
with a stair climber, and so a person should take their time and focus on increasing the duration of the sets.""")
    print("")
    print("Starting workout for 5 minutes...")
    print("Start Workout:")
    for i in range (1,5*60):
        time.sleep(1)
        print(i,"seconds have passed")
    print("End of workout")

