#login
import time
from tabulate import tabulate
from datetime import datetime
import tkinter as tk
from tkinter import messagebox            
import mysql.connector  as ctr
pas='F'
class GymManagementApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Login")
        self.root.overrideredirect(True)
        self.root.geometry("{0}x{1}+0+0".format(root.winfo_screenwidth(), root.winfo_screenheight()))
        self.root.configure(bg='#333333')

        title_frame = tk.Frame(root, bg='#333333')
        title_label = tk.Label(title_frame, text="FITNESS GUIDE", bg='#333333', fg='#107dac', font=("ariel", 24, "bold"))
        author_label = tk.Label(title_frame, text="By Vahin Kumar Singh & Abdullah Kamal", bg='#333333', fg='#107dac')

        self.username_label = tk.Label(root, text="Username:", bg='#333333', fg='#107dac', font=("ariel", 16))
        self.username_entry = tk.Entry(root, font=("ariel", 16))

        self.password_label = tk.Label(root, text="Password:", bg='#333333', fg='#107dac', font=("ariel", 16))
        self.password_entry = tk.Entry(root, show="*", font=("ariel", 16))

        self.login_button = tk.Button(root, text="Login", command=self.login, bg='#cc2a36', fg='#333333', font=("ariel", 16))
        self.create_account_button = tk.Button(root, text="Create Account", command=self.create_account, bg='#cc2a36', fg='#333333', font=("ariel", 16))

        title_frame.pack(pady=20)
        title_label.grid(row=0, column=0, padx=20)
        author_label.grid(row=0, column=1, padx=20)

        self.username_label.pack(pady=10)
        self.username_entry.pack(pady=10)
        self.password_label.pack(pady=10)
        self.password_entry.pack(pady=10)
        self.login_button.pack(pady=10)
        self.create_account_button.pack(pady=10)

        # Initialize the database connection
        self.mycon = ctr.connect(host="localhost", user="root", passwd="", database="mysql")
        self.cur = self.mycon.cursor()

    def login(self):
        uid = self.username_entry.get()
        psw = self.password_entry.get()
        r = "SELECT password FROM accoun WHERE username='%s'" % uid
        self.cur.execute(r)
        t = self.cur.fetchall()
        pas = "F"  # Default to 'F' (False)
        for i in t:
            for j in i:
                if j == psw:
                    pas = "T"  # Set to 'T' (True)
                    print("Welcome back", uid)
                    # Perform any actions you want here before destroying the login window.
                    # Then, destroy the login window.
                    self.root.destroy()
                    # Open the main function within the IDLE environment
                    self.main()
                    return
        if pas == "F":
            print("Login failed")
    def create_account(self):
        nid = self.username_entry.get()
        npd = self.password_entry.get()
        self.cur.execute("SELECT username FROM accoun WHERE username = %s", (nid,))
        t = self.cur.fetchall()
        if t:
            print("This username already exists, try another")
        else:
            q = "INSERT INTO accoun VALUES (%s, %s)"
            self.cur.execute(q, (nid, npd))
            self.mycon.commit()
            print("Account was created")
    def main(self):
        print(" ")

# Create the tkinter application
root = tk.Tk()
app = GymManagementApp(root)
root.mainloop()

            
