#cardio function
def cardio():
    print(".................CARDIO..................")
    print("choose any 2 cardio workout for the day:")
    print("1.elliptical")
    print("2.stair climber")
    print("3.exercise bike")
    print("4.treadmill")
    print("5.rowing machine")
    print("6.squat jumps")
    print("7.burpees")
    print("8.jump rope")
    print("9.jumping jacks")
    ans = "y"
    count=0
    while ans=="y" or ans=="Y":
        choice=int(input("enter the workout you want:"))
        if choice==1:
            Elliptical_machine()
        elif choice==2:
            stair_climber()
        elif choice==3:
            Exercise_bike()
        elif choice==4:
            Treadmill()
        elif choice==5:
            Rowing_machine()
        elif choice==6:
            Squat_jumps()
        elif choice==7:
            Burpees()
        elif choice==8:
            Jump_rope()
        elif choice==9:
            Jumping_jacks()
        count+=1
        if count==2:
            print("You have completed the two workouts")
            ans='n'
        ans=input("Enter Y/y to continue or N/n to terminate: ")

