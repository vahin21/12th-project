#day
dt=datetime.now()
def day():
    d=dt.weekday()
    week=["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]
    return week[d]


#5 minute timer
import time
from tkinter import *
from tkinter import messagebox
def timer5():
    root = Tk()
    root.geometry("300x300")
    root.title("Workout Countdown")
    root.configure(bg="black")
    minute=StringVar()
    second=StringVar()
    minute.set("05")
    second.set("00")
  
    minuteEntry= Entry(root, width=3, font=("Arial",25,""),
                   textvariable=minute)
    minuteEntry.place(x=90,y=20)
  
    secondEntry= Entry(root, width=3, font=("Arial",25,""),
                   textvariable=second)
    secondEntry.place(x=180,y=20)
    def submit():
        try:
            temp =int(5)*60 + int(0)
        except:
            print("Please input the right value")
        while temp >-1:
            mins,secs = divmod(temp,60)
            if mins >60:
                mins = divmod(mins, 60)
            minute.set("{0:2d}".format(mins))
            second.set("{0:2d}".format(secs))
  
            root.update()
            time.sleep(1)
            if (temp == 0):
                messagebox.showinfo("Time Countdown", "End of workout")
                root.destroy()
            temp -= 1
    btn = Button(root, text='START', bd='20',command= submit)
    btn.place(x = 130,y = 120)
    root.mainloop()


