#chest function
def chest():
    print(".................CHEST..................")
    print("Choose any 6 Chest workout for the day:")
    print("1.Flat bench press")
    print("2.Incline bench press")
    print("3.Decline bench press")
    print("4.Cable crossover")
    print("5.Chest dip")
    print("6.Resistance band pullover")
    print("7.Incline push up")
    print("8.Chest fly")
    print("9.Dumbbel pullover")
    
    ans = "y"
    count=0
    while ans=="y" or ans=="Y":
        choice=int(input("enter the workout you want:"))
        if choice==1:
            Flat_bench_press()
        elif choice==2:
            Incline_bench_press()
        elif choice==3:
            Decline_bench_press()
        elif choice==4:
            Cable_crossover()
        elif choice==5:
            Chest_dip()
        elif choice==6:
            Resistance_band_pullover()
        elif choice==7:
            Incline_push_up()
        elif choice==8:
            Chest_fly()
        elif choice==9:
            Dumbbel_pullover()
        count+=1
        if count==6:
            print("You have completed the six workouts")
            ans='n'
        ans=input("Enter Y/y to continue or N/n to terminate:")

