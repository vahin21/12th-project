#back function
def back():
    print(".................BACK..................")
    print("Choose any 5 back workout for the day:")
    print("1.Lat pulldown")
    print("2.Back extension")
    print("3.suspended row")
    print("4.upward cable wood chop")
    print("5.Bent-knee good morning")
    print("6.Quadruped single-arm dumbbell row")
    print("7.Wide dumbbell bent-over row")
    print("8.Resistance band pull apart")
    print("9.Dead lift")
    ans = "y"
    count=0
    while ans=="y" or ans=="Y":
        choice=int(input("enter the workout you want:"))
        if choice==1:
            Lat_pulldown()
        elif choice==2:
            Back_extension()
        elif choice==3:
            Suspended_row()
        elif choice==4:
            Upward_cable_wood_chop()
        elif choice==5:
            bent_knee_good_morning()
        elif choice==6:
            Quadruped_single_arm_dumbbell_row()
        elif choice==7:
            Wide_dumbbell_bent_over_row()
        elif choice==8:
            Resistance_band_pull_apart()
        elif choice==9:
            Dead_lift()
        count+=1
        if count==5:
            print("You have completed the five workouts")
            ans='n'
        ans=input("Enter Y/y to continue or N/n to terminate: ")

