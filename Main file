#BMI CALCULATOR
def bmi():
    m=float(input("Enter mass in Kg: "))
    h=float(input("Enter height in cm: "))
    hm=h/100
    bm=m/(hm*hm)
    bm=float(round(bm,2))
    print("Body mass index: ",bm)
    if bm<18.5:
        print("Underweight")
    elif bm>=18.5 and bm<=24.9:
        print("Healthy weight")
    elif bm>24.9 and bm<=29.9:
        print("Overweight")
    elif bm>29.9:
        print("Obese")

#RETURN TO MAIN MENU
ed=1
def ret():
    global t
    q=input("Do you want to go to Main Menu? y/n :")
    if q.lower()=='y':
        main()
        t=1
    else:
        t=2
#CALORIE COUNTER
def calories():
    print("Find your required calories:")
    g=input("Enter your gender m/f")
    height=int(input("Enter your height in cm"))
    weight=int(input("Enter your weight in kilograms"))
    age=int(input("Enter your age"))
    bmr=0
    if g.lower()=="f":
        bmr=655 + (9.56*weight) + (1.85*height) - (4.7*age)
    elif g.lower()=="m":
        bmr=66.5 + (13.75*weight) + (5*height) - (6.75*age)
    bmr=bmr//1
    print("Required Calories to burn: ",bmr)
    print()
    print("To find the required calories to consume:")
    print("Select your suitable choice:")
    print("(1) Sedentary (little or no exercise)")
    print("(2) Lightly active (exercise 1â€“3 days/week)")
    print("(3) Moderately active (exercise 3â€“5 days/week)")
    print("(4) Active (exercise 6â€“7 days/week)")
    print("(5) Very active (hard exercise 6â€“7 days/week)")
    calch=int(input("Enter your choice:"))
    if calch==1:
        amr=bmr*1.2
    elif calch==2:
        amr=bmr*1.4
    elif calch==3:
        amr=bmr*1.55
    elif calch==4:
        amr=bmr*1.725
    elif calch==5:
        amr=bmr*1.9
    global cal
    cal=amr//1
    print("Required calories for consumption: ",cal)

#BREATHING EXERCISE
def breathe():
    print("Welcome to breathing exercise...")
    time.sleep(1)
    print("Sit down")
    time.sleep(1)
    print("Maintain a straight posture")
    time.sleep(1)
    print("Choose a breathing workout for...")
    print("(1) One Minute")
    print("(2)Two Minutes")
    br=int(input("Enter your choice:"))
    if br==1:
        for i in range(6):
            breatheT()
    elif br==2:
        for i in range(12):
            breatheT()
    elif br==3:
        for i in range(18):
            breatheT()
def breatheT():
    print("Slowly inhale...")
    for i in range(1,6):
        print(i)
        time.sleep(1)
    print("Exhale slowly...")
    time.sleep(5)

