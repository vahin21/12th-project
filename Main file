def level():
    print("Choose your level:")
    print("(1) Beginner")
    print("(2) Advanced")
    l=int(input("Enter your choice: "))
    global lev
    if l==1:
        lev=1
    elif l==2:
        lev=2
    else:
        print("invalid input")
    
